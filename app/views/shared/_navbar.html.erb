<div class="navbar">

  <!-- Logo -->
  <% if user_signed_in? %>
  <!-- logo redirection to all games when logged in -->
    <%= link_to collections_path, class: "navbar-brand" do %>
      <%= image_tag "chess-rise-logo.png", height: 50 %>
    <% end %>

    <% else %>
    <!-- logo redirection to home page when logged out -->
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "chess-rise-logo.png", height: 50 %>
    <% end %>
  <% end %>


  <!-- Right Navigation -->

  <div class="navbar-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->

      <% if controller?("games") && action?("new") %>

        <%= link_to search_path, class: "navbar-item navbar-link" do %><i class='fas fa-search'></i> Search for games<% end %>

      <% else %>

        <%= link_to search_path, class: "navbar-item navbar-link" do %><i class='fas fa-search'></i> Search for games<% end %>

      <% end %>

    <% else %>

      <!-- Login and signup links (when logged out) -->
      <%= link_to t(".sign_up", default: "Sign up"), new_user_registration_path, class: "navbar-item navbar-link" %>
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-item navbar-link" %>

    <% end %>

  </div>
</div>

