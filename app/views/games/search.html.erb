
<div class="wrapper">

  <div class="container-fluid">
    <div class="row">

      <%= render "shared/sidebar_collection" %>

      <div class="board col-sm-4" id="chessbox-search">
        <div id="chessgame-find"></div>
        <div id="fen" data-fen="<%=@search_fen%>"></div>
        <div id="moves" data-moves="<%= @moves %>"></div>
        <%= render "shared/chess_box_controls" %>
      </div>

      <div class="col-sm-3 game-notation-find" id='chessbox-notation'>
        <div class="chess-headers">
          <div class="chess-description"></div>
        </div>
        <div class="moves-input"></div>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token, id: "token" %>
        <button id="find-game-button">Find games</button>
      </div>

      <div class="col-sm-3" id="search-results">
        <ul>
          <% @games.each do |game| %>
            <li>
              <% if game.white_player.present? && game.black_player.present? && game.result.present? %>
                <span><%= game.id %></span>
                <span><%= game.white_player.last_name %></span>
                <span><%= game.black_player.last_name %></span>
                <span><%= game.result %></span>
              <% end %>
             </li>
          <% end %>
        </ul>

      </div>

    </div>
  </div>

</div>
